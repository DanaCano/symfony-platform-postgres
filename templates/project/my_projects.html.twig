{% extends 'base.html.twig' %}
{% block title %}Mes projets{% endblock %}
{% block body %}
  <h1>Mes projets</h1>
  {% if projects %}
    <ul class="list-group">
      {% for project in projects %}
        <li class="list-group-item d-flex justify-content-between align-items-center">
          <a href="{{ path('app_project_show', {'id': project.id}) }}">{{ project.title }}</a>
          <span class="badge bg-secondary">{{ project.applications|length }} candidatu{{ project.applications|length == 1 ? 're' : 'tures' }}</span>
        </li>
      {% endfor %}
    </ul>
  {% else %}
    <p>Vous n'avez encore créé aucun projet. <a href="{{ path('app_project_new') }}">Publiez-en un ici</a>.</p>
  {% endif %}
{% endblock %}
