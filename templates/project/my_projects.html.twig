{% extends 'base.html.twig' %}
{% block title %}Mis Proyectos{% endblock %}
{% block body %}
  <h1>Mis Proyectos</h1>
  {% if projects %}
    <ul class="list-group">
      {% for project in projects %}
        <li class="list-group-item d-flex justify-content-between align-items-center">
          <a href="{{ path('app_project_show', {'id': project.id}) }}">{{ project.title }}</a>
          <span class="badge bg-secondary">{{ project.applications|length }} postulac{{ project.applications|length == 1 ? 'ión' : 'iones' }}</span>
        </li>
      {% endfor %}
    </ul>
  {% else %}
    <p>No has creado ningún proyecto aún. <a href="{{ path('app_project_new') }}">Publica uno aquí</a>.</p>
  {% endif %}
{% endblock %}
