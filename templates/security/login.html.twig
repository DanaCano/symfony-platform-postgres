{% extends 'base.html.twig' %}
{% block title %}Se connecter{% endblock %}
{% block body %}
<div class="row justify-content-center">
  <div class="col-12 col-md-6 col-lg-4">
    <h2 class="text-center mb-4">Iniciar Sesión</h2>
    <form method="post">
      {% if error %}
        <div class="alert alert-danger">
          {{ error.messageKey|trans(error.messageData, 'security') }}
        </div>
      {% endif %}

      {% if app.user %}
        <div class="mb-3">
          Vous êtes déjà connecté en tant que {{ app.user.name }}.
          <a href="{{ path('app_logout') }}">Se déconnecter</a>
        </div>
      {% endif %}

      <div class="mb-3">
        <label for="inputEmail" class="form-label">Courrier électronique</label>
        <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" required autofocus>
      </div>

      <div class="mb-3">
        <label for="inputPassword" class="form-label">Mot de passe</label>
        <input type="password" name="password" id="inputPassword" class="form-control" required>
      </div>

      <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

      {% if recaptcha_site_key %}
        <div class="mb-3">
          <div class="g-recaptcha" data-sitekey="{{ recaptcha_site_key }}"></div>
        </div>
        <script src="https://www.google.com/recaptcha/api.js" async defer></script>
      {% endif %}

      <button type="submit" class="btn btn-primary w-100">Entrer</button>
    </form>

    <div class="mt-3 text-center">
      <small>Vous n'avez pas encore de compte ? <a href="{{ path('app_register') }}">Inscrivez-vous</a></small>
    </div>
  </div>
</div>
{% endblock %}